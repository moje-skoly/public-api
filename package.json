{
  "name": "public-api",
  "version": "1.0.0",
  "description": "This is a public API for the 'Nase skoly' project.",
  "main": "build/main.js",
  "scripts": {
	"start": "node build/main.js",
	
	"build": "cd src; tsc",
	"build:watch": "cd src; tsc --watch",
	
	"build-tests": "cd test; rm -r ./build; tsc",
	"build-tests:watch": "cd test; rm -r ./build; tsc --watch",
	
	"pretest": "npm run build-tests",
    "test": "mocha --recursive test/**/*.js",
    "test:watch": "npm run test -- --watch --reporter dot --growl",
	
	"dev": "(npm run build:watch &); (npm run build-tests:watch &); npm run test:watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nase-skoly/public-api.git"
  },
  "keywords": [
    "open",
    "data"
  ],
  "author": "Šimon Rozsíval",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nase-skoly/public-api/issues"
  },
  "homepage": "https://github.com/nase-skoly/public-api#readme",
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-core": "^5.8.25",
    "babel-loader": "^5.3.2",
    "chai": "^3.3.0",
    "mocha": "^2.3.3",
    "serve-static": "^1.10.0",
    "ts-loader": "^0.5.5",
    "typescript": "^1.6.2",
    "typescript-require": "^0.2.9",
    "webpack": "^1.12.2"
  },
  "dependencies": {
    "express": "^4.13.3",
    "passport": "^0.3.0",
    "passport-http-bearer": "^1.0.1"
  }
}
